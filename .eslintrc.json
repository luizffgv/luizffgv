{
  "extends": [
    "next/core-web-vitals",
    "plugin:unicorn/all",
    "plugin:@typescript-eslint/strict-type-checked"
  ],
  "plugins": ["react-compiler"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "curly": "warn",
    "eqeqeq": ["error", "always", { "null": "ignore" }],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "sort-imports": "warn",
    "@next/next/no-img-element": "off",
    "@typescript-eslint/no-invalid-void-type": [
      "error",
      {
        "allowAsThisParameter": true
      }
    ],
    "react/hook-use-state": "warn",
    "react/jsx-handler-names": "warn",
    "react-compiler/react-compiler": "error",
    // Unsure if this should cause an error
    "unicorn/no-array-reduce": "warn",
    "unicorn/no-keyword-prefix": "off",
    // I believe null should be allowed as it has different meaning vs undefined
    "unicorn/no-null": "off",
    // Prettier takes care of ternaries
    "unicorn/no-nested-ternary": "off",
    "unicorn/numeric-separators-style": [
      "error",
      {
        "onlyIfContainsSeparator": true
      }
    ],
    "unicorn/prevent-abbreviations": [
      "error",
      {
        "replacements": {
          // Unambiguous
          "ctx": {
            "context": false
          },
          "params": {
            "parameters": false
          },
          // Idiomatic React abbreviations
          "props": {
            "properties": false
          },
          "ref": {
            "reference": false
          }
        }
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.test.tsx"],
      "rules": {
        // Tests have a ton of promises because of describe() and it()
        "@typescript-eslint/no-floating-promises": "off"
      }
    }
  ]
}
